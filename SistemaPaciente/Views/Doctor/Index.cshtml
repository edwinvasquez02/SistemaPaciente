@using SistemaPaciente.Core.Application.ViewModels.DoctorViewModels;


@model List<DoctorViewModel>

@{
    ViewData["Title"] = "User Home";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-12 text-end mt-2 mb-2">
            <a class="btn btn-primary" asp-controller="Doctor" asp-action="Create">CREAR DOCTOR</a>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header text-light bg-primary">
                    <h3 class="text-center">LISTADO DE DOCTORES CREADOS</h3>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table table-hover">
                            <thead>
                                <tr class="table-primary">
                                    
                                    <th scope="col">Foto</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Cedula</th>
                                    <th scope="col">Telefono</th>
                                    <th scope="col">Correo</th>
                                    <th scope="col" class="text-center">Acciones</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img class="image" src="@item.ImageUrl" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Identification</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Email</td>
                                        <td>

                                            <a class="btn btn-warning " asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id">EDITAR</a>
                                            <a class="btn btn-danger " asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id">ELIMINAR</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
