@using SistemaPaciente.Core.Application.ViewModels.LabResultViewModels;


@model SaveLabResultViewModel

@{
    ViewData["Title"] = "Create Medical Appoinment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class=" card">
                <div class="card-header bg-primary text-light text-center">
                    <h3 class="text-center">CONSULTAR PACIENTE</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.LabTest.Count != 0)
                    {
                        @Html.ValidationSummary(false,"",new{@class = "text-danger"})
                        <form method="post" asp-controller="Medical" asp-action="Consultar">


                            @foreach (var item in ViewBag.LabTest)
                            {
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           value="@item.Id"
                                           name="IdLabTest"
                                           id="IdLabTest">
                                    <label class="col-form-label" for="IdLabTest">
                                        @item.Name
                                    </label>
                                </div>
                            }

                            <input type="hidden" asp-for="IdMedicalAppoinment" />
                            <button type="submit" class="btn btn-primary float-end ms-2">Crear</button>
                            <button asp-controller="Medical" asp-action="Index" class="btn btn-warning float-end ms-2">Volver</button>
                        </form>
                    }
                    else
                    {
                       <h4>NO HAY PRUEBAS DISPONIBLES PARA CONSULTAR</h4>
                    } 
                </div>
            </div>
        </div>
    </div>
</div>