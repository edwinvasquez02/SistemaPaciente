@using SistemaPaciente.Core.Application.ViewModels.LabResultViewModels;

@model List<LabResultViewModel>

@{
    ViewData["Title"] = "User Home";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header text-light bg-primary">
                    <h3 class="text-center">PRUEBAS INDICADAS EN LA CITA</h3>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table table-hover">
                            <thead>
                                <tr class="table-primary">
                                    <th scope="col">PRUEBA</th>
                                    <th scope="col">ESTADO</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.LabTestName</td>

                                        @switch (item.IsCompleted)
                                        {
                                            case true:
                                                <td>COMPLETADA</td>
                                                break;
                                            case false:
                                                <td>PENDIENTE</td>
                                                break;
                                        }
                                    </tr>
                                  
                                }
                            </tbody>
                        </table>
                        <a class="btn btn-primary float-end ms-2" asp-controller="Medical" asp-action="ResultChange" asp-route-id="@Model.FirstOrDefault()?.IdMedicalAppoinment">COMPLETAR CITA</a>
                        <a class="btn btn-warning float-end" asp-controller="Medical" asp-action="Index">VOLVER</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
