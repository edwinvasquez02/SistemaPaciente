@using SistemaPaciente.Core.Application.ViewModels.PatientViewModels;
@model SavePatientViewModel

@{
    ViewData["title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3 mb-5">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h3>Eliminando al Usuario: @Model.Name</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <h3>Estas seguro que deseas eliminar al paciente?</h3>
                        <button class="btn btn-danger float-end ms-2" type="submit" asp-controller="Patient" asp-action="DeleteP" asp-route-id="@Model.Id">ELIMINAR</button>
                        <a class="btn btn-warning float-end" asp-controller="Patient" asp-action="Index">Cancelar</a>
                    </form>

                </div>
            </div>
        </div>

    </div>

</div>
