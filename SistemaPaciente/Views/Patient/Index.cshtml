<div class="container-fluid">

    <div class="row">
        <div class="col-12 text-end mt-2 mb-2">
            <a class="btn btn-primary" asp-controller="Patient" asp-action="Create">CREAR PACIENTE</a>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header text-light bg-primary">
                    <h3 class="text-center">LISTADO DE PACIENTES CREADOS</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="table-primary">
                                    <th scope="col">Foto</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Cedula</th>
                                    <th scope="col">Telefono</th>
                                    <th scope="col">Direccion</th>
                                    <th scope="col">Fecha Nacimiento</th>
                                    <th scope="col">Alergico</th>
                                    <th scope="col">Fumador</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img class="image" src="@item.ImageUrl" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Identification</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Direction</td>
                                        <td>@item.DateOfBorn</td>
                                        <td>@(item.IsAllegier ? "SI" : "NO")</td>
                                        <td>@(item.IsSmoker ? "SI" : "NO")</td>
                                        <td>
                                            <a class="btn btn-warning" asp-controller="Patient" asp-action="Update" asp-route-id="@item.Id">EDITAR</a>
                                            <a class="btn btn-danger" asp-controller="Patient" asp-action="Delete" asp-route-id="@item.Id">ELIMINAR</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
