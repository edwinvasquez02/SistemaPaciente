
@using SistemaPaciente.Core.Application.ViewModels.RolViewModels;

@model List<RolViewModel>

@{
    ViewData["Title"] = "Rol Home";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3 text-end mt-2 mb-2">
            <a class="btn btn-primary" asp-controller="Rol" asp-action="Create">CREAR ROL</a>
        </div>

        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header text-light bg-primary">
                    <h3 class="text-center">LISTADO DE ROLES CREADOS</h3>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table table-hover">
                            <thead>
                                <tr class="table-primary">
                                    <th scope="col">Rol</th>
                                    <th scope="col">Acciones</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <a class="btn btn-warning " asp-controller="Rol" asp-action="Update" asp-route-id="@item.Id">EDITAR</a>
                                            <a class="btn btn-danger " asp-controller="Rol" asp-action="Delete" asp-route-id="@item.Id">ELIMINAR</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

