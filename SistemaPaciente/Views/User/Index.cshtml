@using SistemaPaciente.Core.Application.ViewModels.UserViewModels;


@model List<UserViewModel>

@{
    ViewData["Title"] = "User Home";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-12 text-end mt-2 mb-2">
            <a class="btn btn-primary" asp-controller="User" asp-action="Create">CREAR USUARIO</a>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header text-light bg-primary">
                    <h3 class="text-center">LISTADO DE USUARIOS CREADOS</h3>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table table-hover">
                            <thead>
                                <tr class="table-primary">
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Correo</th>
                                    <th scope="col">Nombre Usuario</th>
                                    <th scope="col">Tipo Usuario</th>
                                    <th scope="col">Acciones</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.UserName</td>
                                        <td>@item.RolName</td>
                                        <td>
                                            <a class="btn btn-warning " asp-controller="User" asp-action="Update" asp-route-id="@item.Id">EDITAR</a>
                                            <a class="btn btn-danger " asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">ELIMINAR</a>
                                            <a class="btn btn-warning " asp-controller="User" asp-action="ChangePassword" asp-route-id="@item.Id">CAMBIAR CONTRASEÑA</a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

